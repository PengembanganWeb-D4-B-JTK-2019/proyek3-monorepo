server {
  listen 80;
  listen [::]:80;

  server_name logbook.localhost;

  location / {
    resolver 127.0.0.11;
    set $upstream logbook;
    proxy_pass http://$upstream:8080;
  }

  location /api {
    resolver 127.0.0.11;
    set $upstream service-logbook;
    rewrite ^/api(?:/(.*))?$ /$1 break;
    proxy_pass http://$upstream:8080;
  }
}
